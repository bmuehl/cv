{
	"useTabs": true,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"bracketSameLine": false,
	"semi": false,
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-organize-imports",
		"prettier-plugin-tailwindcss"
	],
	"pluginSearchDirs": ["."],
	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
